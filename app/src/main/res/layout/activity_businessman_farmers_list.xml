<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/activity_businessman_products"
    >
    <Button
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/btn_show_farmers"
        android:text="Menu"
        android:textSize="20dp"
        android:background="#FFA500"
        android:textColor="#E0FFFF" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вывести список фермеров"
        android:layout_centerHorizontal="true"
        android:background="#FFA500"
        android:textColor="#E0FFFF"
        android:id="@+id/btn_show_farmers"/>

    <ListView
        android:layout_below="@id/btn_menu"
        android:id="@+id/list_farmers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>





</RelativeLayout>